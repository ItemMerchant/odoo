<odoo>
    <record id="view_product_template_form_inherit_asin" model="ir.ui.view">
        <field name="name">product.template.form.inherit.asin</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='inventory']" position="after">
                <page string="ASIN">
                    <group>
                        <field name="asin"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
